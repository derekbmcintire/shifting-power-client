<iframe class='video-wheel' width="426" height="240" src={{video.url}} frameborder="0" gesture="media" allow="encrypted-media" allowfullscreen></iframe>
{{#if isAuthenticated}}
<form {{action 'createRating' this on='submit'}}>
  <h4>Rate this video:</h4>
  <ul>
    <li class='rate-btn text-center'>{{input type="radio" name="rating" change=(action (mut rating) '1')}} 1</li>

  <li class='rate-btn text-center'>{{input type="radio" name="rating" change=(action (mut rating) '2')}} 2</li>

    <li class='rate-btn text-center'>{{input type="radio" name="rating" change=(action (mut rating) '3')}} 3</li>

    <li class='rate-btn text-center'>{{input type="radio" name="rating" change=(action (mut rating) '4')}} 4</li>

    <li class='rate-btn text-center'>{{input type="radio" name="rating" change=(action (mut rating) '5')}} 5</li>

    <li class='rate-btn text-center'><button class='btn btn-primary' {{action 'change'}}>save</button></li>
  </ul>

  </form>
  {{/if}}
{{#if video.length}}
<h5>Rated {{video.avg}}/10 by {{video.length}} ratings.</h5>
{{/if}}
